<Window x:Class="GUI.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Danh sách dự án" Height="450" Width="801">
    <Grid>
        <ListView HorizontalAlignment="Center" VerticalAlignment="Top" Width="760" Margin="10,10,10,0" Height="330" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tên dự án" Width="100"/>
                    <GridViewColumn Header="Tình trạng" Width="100"/>
                    <GridViewColumn Header="Ngày bắt đầu" Width="150"/>
                    <GridViewColumn Header="Ngày kết thúc" Width="150"/>
                    <GridViewColumn Header="Người khởi tạo" Width="200"/>
                    <GridViewColumn Header="Miêu tả dự án" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Height="40">
            <Button Content="Thêm" Margin="5" Width="83" Click="AddProject_Click"/>
            <Button Content="Xem" Margin="5" Width="83" Click="ViewProject_Click"/>
            <Button Content="Trở về trang chủ" Margin="5" Width="130" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
