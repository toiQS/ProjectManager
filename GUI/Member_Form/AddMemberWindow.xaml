<Window x:Class="GUI.Member_Form.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Member_Form"
        mc:Ignorable="d"
        Title="AddMemberWindow" Height="289" Width="613">
    <Grid>
        <Label Content="Mã số thành viên mới:" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Tên vai trò:" HorizontalAlignment="Left" Margin="50,160,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <TextBox x:Name="MemberIdTextBox" HorizontalAlignment="Left" Height="25" Margin="250,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <ComboBox x:Name="RoleComboBox" HorizontalAlignment="Left" Height="25" Margin="250,160,0,0" VerticalAlignment="Top" Width="200"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button x:Name="SaveButton" Content="Lưu" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Hủy" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
