<Window x:Class="GUI.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Quản lý trạng thái" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="StatusListView" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,10" ItemsSource="{Binding StatusList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã số trạng thái" DisplayMemberBinding="{Binding StatusID}" Width="120"/>
                    <GridViewColumn Header="Tên trạng thái" DisplayMemberBinding="{Binding StatusName}" Width="200"/>
                    <GridViewColumn Header="Thông tin trạng thái" DisplayMemberBinding="{Binding StatusInfo}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Thêm" Width="100" Margin="5" Click="AddButton_Click"/>
            <Button Content="Xem/Chỉnh sửa" Width="100" Margin="5" Click="ViewEditButton_Click"/>
            <Button Content="Trở về trang chủ" Width="120" Margin="5" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
